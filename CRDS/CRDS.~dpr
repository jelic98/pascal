{$APPTYPE CONSOLE}

var
  t,n,i,x,y,j,fact:longint;

begin
  readln(t);

  for i:=1 to t do
    begin
      readln(n);

      y:=n*(n+1);

      x:=0;

      for j:=n downto 1 do
        begin
          fact:=fact+i;
        end;

      {repeat
          x:=x+(n-1);
          n:=n-1;
      until
        n=0;}

      writeln(fact+y);
    end;

  readln;
end.
